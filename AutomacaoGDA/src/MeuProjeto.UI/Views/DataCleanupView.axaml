<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MeuProjeto.UI.ViewModels"
             x:Class="MeuProjeto.UI.Views.DataCleanupView"
             x:DataType="vm:DataCleanupViewModel"
             x:CompileBindings="False">
  <Grid RowDefinitions="Auto,Auto,Auto,*" Margin="12">
    <TextBlock Text="Limpar dados da operacao" FontSize="16" FontWeight="SemiBold" />

    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
      <CheckBox Content="Limpar StockSumary" IsChecked="{Binding LimparStockSummary}" />
      <CheckBox Content="Limpar Stock" IsChecked="{Binding LimparStock}" IsEnabled="{Binding PodeLimparStock}" />
      <CheckBox Content="Limpar grupo economico" IsChecked="{Binding LimparGrupoEconomico}" />
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
      <Button Content="Executar Limpeza"
              Click="OnExecutarLimpezaClick"
              IsEnabled="{Binding PodeExecutarLimpeza}" />
      <TextBlock Text="{Binding Status}"
                 Foreground="{Binding StatusCor}"
                 VerticalAlignment="Center" />
    </StackPanel>

    <TextBox Grid.Row="3"
             AcceptsReturn="True"
             IsReadOnly="True"
             TextWrapping="Wrap"
             Text="{Binding ScriptGerado}"
             Margin="0,8,0,0" />
  </Grid>
</UserControl>
