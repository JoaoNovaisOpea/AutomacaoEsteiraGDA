<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MeuProjeto.UI.ViewModels"
             x:Class="MeuProjeto.UI.Views.ConfiguracoesView"
             x:DataType="vm:ConfiguracoesViewModel"
             x:CompileBindings="False">
  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Configuracoes de conexao" FontSize="16" FontWeight="SemiBold" />
    <StackPanel Spacing="6">
      <TextBlock Text="Adicionar conexao" FontWeight="SemiBold" />
      <Grid ColumnDefinitions="180,Auto" RowDefinitions="Auto,Auto">
        <TextBlock Text="Ambiente" Grid.Row="0" Grid.Column="0" />
        <TextBox Grid.Row="1" Grid.Column="0" Margin="0,6,8,0" Text="{Binding NovoAmbiente, Mode=TwoWay}" />
        <Button Grid.Row="1" Grid.Column="1" Margin="0,6,0,0" Content="Adicionar" Command="{Binding AdicionarCommand}" />
      </Grid>
    </StackPanel>
    <StackPanel Spacing="6">
      <TextBlock Text="Bearer token" FontWeight="SemiBold" />
      <TextBox Text="{Binding BearerToken, Mode=TwoWay}" />
    </StackPanel>
    <DataGrid ItemsSource="{Binding Conexoes}"
              SelectedItem="{Binding ConexaoSelecionada, Mode=TwoWay}"
              AutoGenerateColumns="False"
              IsReadOnly="False"
              DoubleTapped="OnEditarAmbiente"
              Height="320">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Ambiente" Binding="{Binding Ambiente, Mode=TwoWay}" Width="180" />
        <DataGridTemplateColumn Header="Producao" Width="90">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <CheckBox IsChecked="{Binding IsProduction, Mode=TwoWay}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="Variaveis" Width="120">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Content="Editar" Click="OnEditarAmbienteClick" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button Content="Remover" Command="{Binding RemoverCommand}" />
      <Button Content="Salvar" Command="{Binding SalvarCommand}" />
      <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" />
    </StackPanel>
  </StackPanel>
</UserControl>
